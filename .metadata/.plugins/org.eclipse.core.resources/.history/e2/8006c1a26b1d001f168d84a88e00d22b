	<script>
		function submitForm(){
			alert("submit....");
			var form = document.forms['frm'];
			var formData = new FormData(form);
			
			$.ajax({
				
				type : "post",
				enctype : "multipart/form-data",
				url : [[@/product/regist]],
				data : formData,
				dataType : 'json',
				processData : false,
				contentType : false,
				cache : false,
				success : function(data){
					
					console.log("success : ", data);
					
					
				},
				error : function(e){
					
					console.log("error : ", e);
					
				} 
								
			});
		}
			
			
			
			
			
		}
	
	</script>
